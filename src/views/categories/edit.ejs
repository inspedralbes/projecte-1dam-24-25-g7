<!-- src/views/categories/edit.ejs -->
<%- include('../partials/header', { title: 'Editar Categoria' }) %>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1>Editar Categoria</h1>
    <form action="/categories/<%= category.id %>/update" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Nom de la Categoria</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= category.name %>" required>
      </div>
      <button type="submit" class="btn btn-primary">Actualitzar Categoria</button>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>