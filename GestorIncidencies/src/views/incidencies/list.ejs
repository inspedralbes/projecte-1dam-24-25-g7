<!-- src/views/incidencies/list.ejs -->
<%- include('../partials/header', { title: 'Llista d\'Incidències' }) %>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>LLISTA D'INCIDÈNCIES</h1>
        <a href="/incidencies/new" class="btn btn-success">Nova Incidència</a>
    </div>

    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
        <div class="alert alert-danger" role="alert">
            <%= errorMessage %>
        </div>
    <% } %>

    <div class="card shadow-sm">
        <div class="card-body">
            <% if (typeof incidencies !== 'undefined' && incidencies.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Descripció</th>
                                <th scope="col">Tècnic Assignat</th>
                                <th scope="col">Departament</th>
                                <th scope="col">Estat</th>
                                <th scope="col">Prioritat</th>
                                <th scope="col">Accions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% incidencies.forEach(incidencia => { %>
                                <tr>
                                    <td><%= incidencia.id %></td>
                                    <td><%= incidencia.descripcio %></td>
                                    <td><%= incidencia.Tecnic ? incidencia.Tecnic.nom : 'No assignat' %></td>
                                    <td><%= incidencia.Departament ? incidencia.Departament.nom : 'N/A' %></td>
                                    <td>
                                        <% if (incidencia.resolta) { %>
                                            <span class="badge bg-success">Resolta</span>
                                        <% } else { %>
                                            <span class="badge bg-warning text-dark">Pendent</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (incidencia.prioritat === 'Alta') { %>
                                            <span class="badge bg-danger"><%= incidencia.prioritat %></span>
                                        <% } else if (incidencia.prioritat === 'mitja') { %>
                                            <span class="badge bg-info text-dark"><%= incidencia.prioritat %></span>
                                        <% } else if (incidencia.prioritat === 'baixa') { %>
                                            <span class="badge bg-secondary"><%= incidencia.prioritat %></span>
                                        <% } else { %>
                                            No especificada
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/incidencies/<%= incidencia.id %>" class="btn btn-info btn-sm me-1">Detall</a>
                                        <a href="/incidencies/<%= incidencia.id %>/edit" class="btn btn-warning btn-sm me-1">Editar</a>
                                        <form action="/incidencies/<%= incidencia.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Estàs segur que vols eliminar aquesta incidència?');">
                                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="text-center">No hi ha incidències per mostrar.</p>
            <% } %>
        </div>
    </div>

<%- include('../partials/footer') %>