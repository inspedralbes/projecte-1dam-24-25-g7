<%- include('../partials/header', { title: 'Registrar Nova Incidència' }) %>

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="title-box-custom mb-4">
            <h1 style="font-size: 1.8rem;">REGISTRAR NOVA INCIDÈNCIA</h1>
        </div>

        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
            <div class="alert alert-danger" role="alert">
                <%= errorMessage %>
            </div>
        <% } %>

        <div class="card card-custom">
            <div class="card-body p-4 p-md-5">
                <form action="/incidencies/create" method="POST">
                    <div class="mb-4">
                        <label for="descripcio_incidencia" class="form-label fs-5">Descripció detallada:</label>
                        <textarea class="form-control form-control-lg" id="descripcio_incidencia" name="descripcio_incidencia" rows="5" required placeholder="Descriu el problema: què passa, on exactament, des de quan..."></textarea>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label for="idDepartament" class="form-label">Departament:</label>
                            <select class="form-select form-select-lg" id="idDepartament" name="idDepartament" required>
                                <option value="" disabled selected>-- Selecciona Departament --</option>
                                <% departaments.forEach(departament => { %>
                                    <option value="<%= departament.id %>"><%= departament.nom %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="idTecnic" class="form-label">Assignar a Tècnic (opcional):</label>
                            <select class="form-select form-select-lg" id="idTecnic" name="idTecnic">
                                <option value="">-- No Assignat --</option>
                                <% tecnics.forEach(tecnic => { %>
                                    <option value="<%= tecnic.id %>"><%= tecnic.nom %></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                    
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label for="prioritat_incidencia" class="form-label">Prioritat:</label>
                            <select class="form-select form-select-lg" id="prioritat_incidencia" name="prioritat_incidencia">
                                <option value="" selected>-- Sense Prioritat --</option>
                                <option value="Alta">Alta</option>
                                <option value="mitja">Mitja</option>
                                <option value="baixa">Baixa</option>
                            </select>
                        </div>
                        <div class="col-md-6 d-flex align-items-center justify-content-start pt-3">
                            <div class="form-check form-switch form-check-lg">
                                <input class="form-check-input" type="checkbox" role="switch" id="resolta_incidencia" name="resolta_incidencia" value="true">
                                <label class="form-check-label" for="resolta_incidencia">
                                    Marcada com a Resolta
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a href="/incidencies" class="btn btn-outline-secondary btn-lg">Cancel·lar</a>
                        <button type="reset" class="btn btn-outline-warning btn-lg">Netejar</button>
                        <button type="submit" class="btn btn-rosa btn-lg">Crear Incidència</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>