<%- include('../partials/header', { title: 'Editar Incidència #' + incidencia.id }) %>

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="title-box-custom mb-4">
            <h1 style="font-size: 1.8rem;">EDITAR INCIDÈNCIA #<%= incidencia.id %></h1>
        </div>

        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
            <div class="alert alert-danger" role="alert">
                <%= errorMessage %>
            </div>
        <% } %>

        <div class="card card-custom">
            <div class="card-body p-4 p-md-5">
                <form action="/incidencies/<%= incidencia.id %>/update" method="POST">
                    <div class="mb-4">
                        <label for="descripcio_incidencia" class="form-label fs-5">Descripció detallada:</label>
                        <textarea class="form-control form-control-lg" id="descripcio_incidencia" name="descripcio_incidencia" rows="5" required><%= incidencia.descripcio %></textarea>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label for="idDepartament" class="form-label">Departament:</label>
                            <select class="form-select form-select-lg" id="idDepartament" name="idDepartament" required>
                                <% departaments.forEach(departament => { %>
                                    <option value="<%= departament.id %>" <%= incidencia.idDepartament === departament.id ? 'selected' : '' %>>
                                        <%= departament.nom %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="idTecnic" class="form-label">Assignat a Tècnic (opcional):</label>
                            <select class="form-select form-select-lg" id="idTecnic" name="idTecnic">
                                <option value="" <%= !incidencia.idTecnic ? 'selected' : '' %>>-- No Assignat --</option>
                                <% tecnics.forEach(tecnic => { %>
                                    <option value="<%= tecnic.id %>" <%= incidencia.idTecnic === tecnic.id ? 'selected' : '' %>>
                                        <%= tecnic.nom %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                    
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label for="prioritat_incidencia" class="form-label">Prioritat:</label>
                            <select class="form-select form-select-lg" id="prioritat_incidencia" name="prioritat_incidencia">
                                <option value="" <%= !incidencia.prioritat ? 'selected' : '' %>>-- Sense Prioritat --</option>
                                <option value="Alta" <%= incidencia.prioritat === 'Alta' ? 'selected' : '' %>>Alta</option>
                                <option value="mitja" <%= incidencia.prioritat === 'mitja' ? 'selected' : '' %>>Mitja</option>
                                <option value="baixa" <%= incidencia.prioritat === 'baixa' ? 'selected' : '' %>>Baixa</option>
                            </select>
                        </div>
                        <div class="col-md-6 d-flex align-items-center justify-content-start pt-3">
                            <div class="form-check form-switch form-check-lg">
                                <input class="form-check-input" type="checkbox" role="switch" id="resolta_incidencia" name="resolta_incidencia" value="true" <%= incidencia.resolta ? 'checked' : '' %>>
                                <label class="form-check-label" for="resolta_incidencia">
                                    Marcada com a Resolta
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a href="/incidencies" class="btn btn-outline-secondary btn-lg">Cancel·lar</a>
                        <button type="submit" class="btn btn-rosa btn-lg">Actualitzar Incidència</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>